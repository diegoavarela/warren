# Warren v3-wiseimport Production Environment Variables
# Copy this file to .env and update with your production values

# Frontend Configuration
VITE_API_URL=https://api-warren-v3.yourdomain.com
VITE_APP_NAME="Warren - Cashflow Management"
VITE_APP_VERSION=v3-wiseimport

# Backend Configuration
NODE_ENV=production
PORT=3001
JWT_SECRET=your-super-secure-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Database Configuration
DATABASE_URL=postgresql://warren_user:password@postgres:5432/warren_v3_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=warren_v3_db
DB_USER=warren_user
DB_PASSWORD=your-secure-database-password

# Monday.com Integration (if using)
MONDAY_API_KEY=your-monday-api-key
MONDAY_BOARD_ID=your-board-id

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=3600000

# CORS Configuration
CORS_ORIGIN=https://warren-v3.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/warren.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SECURE_COOKIES=true
TRUST_PROXY=true